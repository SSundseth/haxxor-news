<% for comment in object %>
  <div class="info">
    <%= comment.user.email %>
    <%= pluralize(comment.total_score, 'point') %> 
    <%= time_ago_in_words(comment.created_at) %> ago
    <% if signed_in? %>
      | <%= link_to "reply", story_comment_path(comment.story, comment) %>
    <% end %>
  </div>
<% end %>
