
<div class="story">
  <%= link_to @story.title, @story.url %>    
  <div class="info">
    Submitted <%= time_ago_in_words(@story.created_at) %> ago by <%= @story.user.email %>
  </div>      
</div>

<% if signed_in? %>
  <%= render "comments/form" %>
<% else %>
    You must <%= link_to "Login", sign_in_path %> to comment
<% end %>

<h4> Comments </h4>
<ul class="comments">
  <%= render "comments/comment", :object => @comments.chrono %>
</ul>
