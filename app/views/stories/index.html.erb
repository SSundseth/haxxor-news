<% @stories.chrono.each do |story| %>

  <div class="story">
    <%= link_to story.title, story.url %>    
    <div class="info">
      <%= link_to "comments", story_path(story) %> | 
      Submitted <%= pretty_time story.created_at %> by <%= story.user.email %>
    </div>      
  </div>
<% end %>

<%= will_paginate @stories %>
